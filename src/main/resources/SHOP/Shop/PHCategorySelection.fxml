<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SHOP.Shop.PHCategoryController">
   <children>
      <VBox alignment="CENTER" style="-fx-background-color: #ffffff;" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" style="-fx-background-color: #2D728F; -fx-background-radius: 10px;" VBox.vgrow="ALWAYS">
               <children>
                  <Label fx:id="textLabel" text="Which product are you looking for?" textFill="WHITE" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="34.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <FlowPane fx:id="contentDisplay" alignment="TOP_CENTER" columnHalignment="CENTER" rowValignment="TOP" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="homePageButton" mnemonicParsing="false" style="-fx-background-color: #2D728F; -fx-background-radius: 7px;" text="Return to Homepage" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <FlowPane.margin>
                        <Insets top="40.0" />
                     </FlowPane.margin>
                  </Button>
               </children></FlowPane>
         </children>
      </VBox>
   </children>
</HBox>
