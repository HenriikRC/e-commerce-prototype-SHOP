<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SHOP.Shop.CheckoutBillingController">
   <children>
      <HBox alignment="TOP_CENTER" style="-fx-background-color: #2D728F; -fx-background-radius: 10px;">
         <children>
            <Label alignment="CENTER" text="Billing Information" textFill="WHITE" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="34.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <VBox>
                     <children>
                        <Label alignment="CENTER" prefHeight="17.0" prefWidth="40.0" style="-fx-background-radius: 20px; -fx-background-color: #2D728F;" text="CVV" textAlignment="CENTER" textFill="WHITE">
                           <VBox.margin>
                              <Insets bottom="2.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="cvv" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="250.0" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <VBox>
                     <children>
                        <Label alignment="CENTER" prefHeight="17.0" prefWidth="90.0" style="-fx-background-radius: 20px; -fx-background-color: #2D728F;" text="Card Number" textAlignment="CENTER" textFill="WHITE">
                           <VBox.margin>
                              <Insets bottom="2.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="cardNumber" maxWidth="500.0" minWidth="100.0" prefWidth="250.0" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <VBox>
                     <children>
                        <Label alignment="CENTER" prefHeight="17.0" prefWidth="117.0" style="-fx-background-radius: 20px; -fx-background-color: #2D728F;" text="Cardholders Name" textAlignment="CENTER" textFill="WHITE">
                           <VBox.margin>
                              <Insets bottom="2.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="cartHolderName" maxWidth="500.0" minWidth="100.0" prefWidth="250.0" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <VBox prefWidth="108.0">
                     <children>
                        <Label alignment="CENTER" prefWidth="100.0" style="-fx-background-radius: 20px; -fx-background-color: #2D728F;" text="Expiration Month" textAlignment="CENTER" textFill="WHITE">
                           <VBox.margin>
                              <Insets bottom="2.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="expirationMonth" />
                     </children>
                  </VBox>
                  <Label alignment="CENTER" prefHeight="25.0" prefWidth="25.0" text="/">
                     <font>
                        <Font size="25.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                  </Label>
                  <VBox prefWidth="108.0">
                     <children>
                        <Label alignment="CENTER" prefWidth="90.0" style="-fx-background-radius: 20px; -fx-background-color: #2D728F;" text="Expiration Year" textAlignment="CENTER" textFill="WHITE">
                           <VBox.margin>
                              <Insets bottom="2.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="expirationYear">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets left="15.0" right="15.0" top="10.0" />
         </padding>
      </VBox>
      <VBox alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" fillHeight="false">
               <children>
                  <HBox>
                     <children>
                        <Label text="Total:" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_RIGHT">
                     <children>
                        <Label fx:id="totalPriceLabel" alignment="CENTER" text="Price" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" fillHeight="false">
               <children>
                  <Button fx:id="payBtn" alignment="CENTER" mnemonicParsing="false" prefWidth="360.0" style="-fx-background-color: #2D728F;" text="Pay" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font size="17.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="10.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
